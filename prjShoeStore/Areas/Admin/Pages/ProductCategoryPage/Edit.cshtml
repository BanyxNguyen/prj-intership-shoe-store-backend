@page
@model prjShoeStore.Areas.Admin.Pages.ProductCategoryPage.EditModel

@{
    Layout = "Templates/_LayoutForm";
    ViewData["Title"] = "Edit";
}

@section HeaderLayout{
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Product Category</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-page="/ProductCategoryPage/Index">Product Category</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
}

<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Edit</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form method="post">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="LoaiSP.Id" />
                        <div class="form-group">
                            <label asp-for="LoaiSP.Ten" class="control-label"></label>
                            <input asp-for="LoaiSP.Ten" class="form-control" />
                            <span asp-validation-for="LoaiSP.Ten" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LoaiSP.IdThuongHieu" class="control-label"></label>
                            <select asp-for="LoaiSP.IdThuongHieu" class="form-control" asp-items="ViewBag.IdThuongHieu"></select>
                            <span asp-validation-for="LoaiSP.IdThuongHieu" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LoaiSP.IdParent" class="control-label"></label>
                            <select asp-for="LoaiSP.IdParent" class="form-control" asp-items="ViewBag.IdParent"></select>
                            <span asp-validation-for="LoaiSP.IdParent" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-page="./Index">Back to List</a>
                    </div>
                </form>
            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.row -->
</div><!-- /.container-fluid -->


