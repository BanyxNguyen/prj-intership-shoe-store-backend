@page
@model prjShoeStore.Areas.Admin.Pages.ProductCategoryPage.IndexModel

@{
    Layout = "Templates/_LayoutIndex";
    ViewData["Title"] = "Index";
    ViewData["TableId"] = "ProductCategory";
}
@section HeaderLayout{
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Product Category</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-page="/DashBoardPage/Index">Home</a></li>
                    <li class="breadcrumb-item active">Product Category</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
}
@section TableTitle{
    <div class="d-flex justify-content-end">
        <a asp-page="Create">Create New</a>
    </div>
}
<table class="table table table-bordered table-striped" id="@ViewBag.TableId" >
    <thead>
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.LoaiSP[0].Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoaiSP[0].ThuongHieu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoaiSP[0].Parent)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LoaiSP)
        {
        <tr>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThuongHieu.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parent.Ten)
            </td>

        </tr>
        }
    </tbody>
</table>
