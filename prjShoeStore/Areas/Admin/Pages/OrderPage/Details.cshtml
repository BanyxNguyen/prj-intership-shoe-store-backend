@page
@model prjShoeStore.Areas.Admin.Pages.OrderPage.DetailsModel
@{
    Layout = "Templates/_LayoutIndex";
    ViewData["Title"] = "Details";
    ViewData["TableId"] = "OrderDetails";
}
@section Links{
    <!-- Select2 -->
    <link rel="stylesheet" href="/Admin/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="/Admin/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <style>
        span.select2-selection.select2-selection--single {
            height: 100% !important;
        }

        .error-validate {
            border: 2px solid red;
        }
    </style>
}
@section HeaderLayout{
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Order Details</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-page="/OrderPage/Index">Order</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
}

@section TableTitle{
    <div class="d-flex justify-content-end">
        <a asp-page="./Index">Back to List</a>
    </div>
}

<div>
    <h4>PhieuNhap</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DonDatHang.NgayLap)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DonDatHang.NgayLap)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DonDatHang.SoDienThoai)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DonDatHang.SoDienThoai)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DonDatHang.DiaChiNguoiNhan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DonDatHang.DiaChiNguoiNhan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DonDatHang.PaymentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DonDatHang.PaymentId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DonDatHang.PaymentType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DonDatHang.PaymentType)
        </dd>
        <dt class="col-sm-2">
            Tổng Tiền
        </dt>
        <dd class="col-sm-10">
            @(Model.DonDatHang.CTDDHs?.Sum(x=>x.SoLuong*x.Gia)??0)
        </dd>
    </dl>
</div>
<hr />
<table class="table table-bordered table-striped" id="CTPNTable">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => Model.DonDatHang.CTDDHs[0].SanPham.HinhAnh)</th>
            <th>@Html.DisplayNameFor(model => Model.DonDatHang.CTDDHs[0].SanPham.Ten)</th>
            <th>@Html.DisplayNameFor(model => Model.DonDatHang.CTDDHs[0].SanPham.Mau)</th>
            <th>@Html.DisplayNameFor(model => Model.DonDatHang.CTDDHs[0].KichThuoc)</th>
            <th>@Html.DisplayNameFor(model => Model.DonDatHang.CTDDHs[0].SoLuong)</th>
            <th>@Html.DisplayNameFor(model => Model.DonDatHang.CTDDHs[0].Gia)</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DonDatHang.CTDDHs)
        {
            <tr>
                <td>
                    <img class="product-img" width="60" height="45" id="image" src="@item.SanPham.HinhAnh" />
                </td>
                <td>@Html.DisplayFor(model => item.SanPham.Ten)</td>
                <td>@Html.DisplayFor(model => item.SanPham.Mau)</td>
                <td>@Html.DisplayFor(model => item.KichThuoc)</td>
                <td>@Html.DisplayFor(model => item.SoLuong)</td>
                <td>@Html.DisplayFor(model => item.Gia)</td>
            </tr>
        }
    </tbody>
</table>
