@page
@model prjShoeStore.Areas.Admin.Pages.BrandPage.IndexModel

@{
    Layout = "Templates/_LayoutIndex";
    ViewData["Title"] = "Index";
    ViewData["TableId"] = "brand";
}
@section HeaderLayout{
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Brand</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-page="/DashBoardPage/Index">Home</a></li>
                    <li class="breadcrumb-item active">Brand</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
}

@section TableTitle{
    <div class="d-flex justify-content-end">
        <a asp-page="Create">Create New</a>
    </div>
 }

<table class="table table-bordered table-striped" id="@ViewBag.TableId">
    <thead>
        <tr>
            <th>#</th>
            <th>
                @Html.DisplayNameFor(model => model.ThuongHieu[0].Ten)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ThuongHieu)
        {
            <tr>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ten)
                </td>
            </tr>
        }
    </tbody>
</table>
